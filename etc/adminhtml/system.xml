<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="gomage" translate="label" sortOrder="1000">
            <label>GoMage</label>
        </tab>
        <section id="gomage_feed" translate="label" type="text" sortOrder="100" showInDefault="1">
            <label>Feed Pro</label>
            <tab>gomage</tab>
            <resource>GoMage_Feed::config_feed</resource>
            <group id="server" translate="label" type="text" sortOrder="10" showInDefault="1">
                <label>Server Configurations</label>
                <field id="memory_limit" translate="label comment" type="text" sortOrder="10" showInDefault="1">
                    <label>Memory Limit, Mb</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field id="upload_max_filesize" translate="label comment" type="text" sortOrder="20" showInDefault="1">
                    <label>Max Upload File Size, Mb</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field id="post_max_size" translate="label comment" type="text" sortOrder="30" showInDefault="1">
                    <label>Max Post Size, Mb</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field id="time_limit" translate="label comment" type="text" sortOrder="40" showInDefault="1">
                    <label>Execution time, seconds</label>
                    <comment>If set to zero, no time limit is imposed.</comment>
                    <frontend_class>validate-number</frontend_class>
                </field>
            </group>
            <group id="image" translate="label" type="text" sortOrder="20" showInDefault="1">
                <label>Image Settings</label>
                <field id="resize" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Resize Image</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="width" translate="label comment" type="text" sortOrder="20" showInDefault="1">
                    <label>Max Image Width, px</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field id="height" translate="label comment" type="text" sortOrder="30" showInDefault="1">
                    <label>Max Image Height, px</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
            </group>
            <group id="notification" translate="label" type="text" sortOrder="30" showInDefault="1">
                <label>Feed Pro Notifications</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="receiver" translate="label" type="select" sortOrder="20" showInDefault="1">
                    <label>Email Receiver</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Identity</source_model>
                </field>
                <field id="sender" translate="label" type="select" sortOrder="30" showInDefault="1">
                    <label>Email Sender</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Identity</source_model>
                </field>
                <field id="template" translate="label comment" type="select" sortOrder="40" showInDefault="1">
                    <label>Email Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
                <field id="notify" translate="label comment" type="multiselect" sortOrder="50" showInDefault="1">
                    <label>Notify About</label>
                    <source_model>GoMage\Feed\Model\Config\Source\Notify</source_model>
                </field>
                <field id="copy_to" translate="label comment" type="text" sortOrder="60" showInDefault="1">
                    <label>Send Email Copy To</label>
                    <comment>Comma-separated.</comment>
                </field>
                <field id="copy_method" translate="label comment" type="select" sortOrder="70" showInDefault="1">
                    <label>Send Email Copy Method</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Method</source_model>
                </field>
            </group>
        </section>
        <section id="gomage_settings" translate="label" type="text" sortOrder="1000" showInDefault="1">
            <label>Activation</label>
            <tab>gomage</tab>
            <resource>GoMage_Feed::settings_feed</resource>
            <group id="feed" translate="label" type="text" sortOrder="10" showInDefault="1">
                <label>GoMage Feed Pro v.1.0</label>
                <field id="key" translate="label comment" type="text" sortOrder="10" showInDefault="1">
                    <label>Activation Key</label>
                </field>
                <field id="websites" translate="label comment" type="checkbox" sortOrder="20" showInDefault="1">
                    <label>Select Websites</label>
                    <source_model>Magento\Config\Model\Config\Source\Website</source_model>
                    <frontend_model>GoMage\Feed\Block\Adminhtml\Form\Element\Website</frontend_model>
                </field>
            </group>
        </section>
        <section id="gomage_notification" translate="label" type="text" sortOrder="1100" showInDefault="1">
            <label>Notifications</label>
            <tab>gomage</tab>
            <resource>GoMage_Notification::notification</resource>
            <group id="notification" translate="label" type="text" sortOrder="10" showInDefault="1">
                <label>Notifications</label>
                <field id="enable" translate="label comment" type="select" sortOrder="10" showInDefault="1">
                    <label>I'd like to get advertising by GoMage</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
